<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/mainLayoutChat"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginRight="45dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/chatGrade"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginRight="7dp"
                        android:scaleType="fitStart"
                        android:src="@drawable/one_icon"/>
                    <TextView
                        android:id="@+id/chatName"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:maxLines="1"
                        android:maxWidth="100dp"
                        android:textSize="14dp"
                        android:text="양현승"/>

                    <TextView
                        android:id="@+id/chatInfo"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:text="6초 전 ・ 조회수 1"
                        android:textColor="#424242"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/mdi_thumb_up" />

                    <TextView
                        android:id="@+id/chat_thumb_cnt"
                        android:layout_width="22dp"
                        android:layout_marginLeft="2dp"
                        android:layout_height="wrap_content"
                        android:text="14"
                        android:layout_gravity="center"
                        android:maxLines="1"
                        android:textColor="#6E6E6E"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/chatContent"
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18dp"
                android:text="ㄷㄷㄷㅈ"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/chatMenuBtn"
            android:layout_gravity="right|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/more_vert"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E6E6E6"/>
</LinearLayout>